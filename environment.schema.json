{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Environment Contract Example",
  "type": "object",
  "properties": {
    "APP_NAME": {
      "type": "string",
      "description": "The name of the application."
    },
    "DEPENDENCY_URL": {
      "type": "string",
      "description": "The URL for some thing we depend on.",
      "pattern": "^((http[s]?|ftp):\\/)?\\/?([^:\\/\\s]+)((\\/\\w+)*\/)([\\w\\-\\.]+[^#?\\s]+)(.*)?(#[\\w\\-]+)?$"
    },
    "DEPENDENCY_VERSION": {
      "type": "string",
      "description": "Maybe different deployments of this app run against different version of an SDK",
      "pattern": "^(\\d+)\\.(\\d+)\\.(\\d+)$"
    },
    "TIMEOUT": {
      "type": "string",
      "description": "Timeout duration for calls to dependency",
      "pattern": "^\\d{1,5}$"
    }
  },
  "required": [
    "APP_NAME",
    "DEPENDENCY_URL",
    "DEPENDENCY_VERSION"
  ],
  "additionalProperties": true
}
